{
    "name": "unzerdev/magento2",
    "description": "This extension for Magento 2 provides a direct integration of the heidelpay payment types to your Magento 2 shop via the heidelpay merchant gateway (MGW).",
    "type": "magento2-module",
    "license": "Apache-2.0",
    "require": {
        "php": "~7.1.3|~7.2.0|~7.3.0|~7.4.0",
        "unzerdev/php-sdk": "~1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "~6.2.0"
    },
    "support": {
        "email": "support@unzer.com"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Heidelpay\\MGW\\": ""
        }
    },
    "homepage": "https://dev.unzer.com/user-guide-magento-2-mgw-plugin",
    "keywords": [
      "magento",
      "magento2",
      "payment",
      "php",
      "payment-gateway"
    ]
}
