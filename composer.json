{
    "name": "heidelpay/magento2-merchant-gateway",
    "description": "This extension for Magento 2 provides a direct integration of the Heidelpay payment methods to your Magento 2 shop.",
    "type": "magento2-module",
    "license": "Apache-2.0",
    "require": {
        "php": "~7.1.3|~7.2.0",
        "heidelpay/heidelpay-php": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "~6.2.0"
    },
    "support": {
        "email": "support@heidelpay.com"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Heidelpay\\MGW\\": ""
        }
    },
    "homepage": "https://dev.heidelpay.com/magento2",
    "keywords": [
      "magento",
      "magento2",
      "payment",
      "php",
      "payment-gateway"
    ]
}
