<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="payment_method_assign_data_hpmgw_cards">
        <observer name="hpmgw_cards_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_direct_debit">
        <observer name="hpmgw_direct_debit_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_direct_debit_guaranteed">
        <observer name="hpmgw_direct_debit_guaranteed_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_flexipay_direct">
        <observer name="hpmgw_flexipay_direct_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_ideal">
        <observer name="hpmgw_ideal_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_invoice">
        <observer name="hpmgw_invoice_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_invoice_guaranteed">
        <observer name="hpmgw_invoice_guaranteed_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_invoice_guaranteed_b2b">
        <observer name="hpmgw_invoice_guaranteed_b2b_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_paypal">
        <observer name="hpmgw_paypal_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>
    <event name="payment_method_assign_data_hpmgw_sofort">
        <observer name="hpmgw_sofort_data_assign" instance="Heidelpay\MGW\Model\Method\Observer\BaseDataAssignObserver" />
    </event>

    <event name="hpmgw_authorize_canceled">
        <observer name="hpmgw_payment_failed" instance="Heidelpay\MGW\Model\Observer\TransactionFailedObserver" />
    </event>
    <event name="hpmgw_authorize_failed">
        <observer name="hpmgw_payment_failed" instance="Heidelpay\MGW\Model\Observer\TransactionFailedObserver" />
    </event>
    <event name="hpmgw_authorize_expired">
        <observer name="hpmgw_payment_failed" instance="Heidelpay\MGW\Model\Observer\TransactionFailedObserver" />
    </event>
    <event name="hpmgw_charge_canceled">
        <observer name="hpmgw_payment_failed" instance="Heidelpay\MGW\Model\Observer\TransactionFailedObserver" />
    </event>
    <event name="hpmgw_charge_failed">
        <observer name="hpmgw_payment_failed" instance="Heidelpay\MGW\Model\Observer\TransactionFailedObserver" />
    </event>
    <event name="hpmgw_chargeback">
        <observer name="hpmgw_payment_review" instance="Heidelpay\MGW\Model\Observer\TransactionFailedObserver" />
    </event>

    <event name="hpmgw_authorize_succeeded">
        <observer name="hpmgw_payment_review" instance="Heidelpay\MGW\Model\Observer\TransactionSucceededObserver" />
    </event>
    <event name="hpmgw_charge_succeeded">
        <observer name="hpmgw_payment_review" instance="Heidelpay\MGW\Model\Observer\TransactionSucceededObserver" />
    </event>

    <event name="hpmgw_payment_payment_review">
        <observer name="hpmgw_payment_review" instance="Heidelpay\MGW\Model\Observer\TransactionReviewObserver" />
    </event>

    <event name="hpmgw_payment_completed">
        <observer name="hpmgw_payment_review" instance="Heidelpay\MGW\Model\Observer\PaymentCompletedObserver" />
    </event>
</config>
